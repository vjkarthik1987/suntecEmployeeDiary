<% layout('./layout/boilerplate') -%>
<div class="mainDiv container">
    <h1 class="fs-3">My Profile</h1>
    <a href="/employee/changePassword" class="d-block"><button class="btn btn-primary">Change Password</button></a>
    <div class="contentHolder mt-3 d-inline-block pe-3">
        <p class="mt-3">Name: <%= employee.name %></p>
        <p>Username: <%= employee.username %></p>
        <p>Email: <%= employee.email %></p>
        <p>Manager Email: <%= employee.managerEmail %></p>
        <p>Team: <%= employee.team %></p>
        <p>Diary Entries This FY: <%= diaryEntriesCount %></p>
        <p>Outcomes This FY: <%= outcomeCount %></p>
    </div>
</div>



