<% layout('./layout/boilerplate') -%>
<div class="mainDiv container">
    <form action="/employee/changePassword" method="post" class="d-flex flex-column col col-12 col-md-5 mx-auto contentHolder px-2 py-4 mt-3">
        <h1 class="fs-4">Change Password</h1>
        <div class="form-group mb-2">
            <label for="oldPassword" class="form-label">Current Password</label>
            <input type="password" name="oldPassword" id="oldPassword" required class="form-control">
        </div>
        <div class="form-group mb-2">
            <label for="newPassword" class="form-label">New Password</label>
            <input type="password" name="newPassword" id="newPassword" required class="form-control">
        </div>
        <div class="form-group mb-4">
            <label for="confirmPassword" class="form-label">Confirm New Password</label>
            <input type="password" name="confirmPassword" id="confirmPassword" required class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Change Password</button>
</form>
</div>
